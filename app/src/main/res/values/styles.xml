<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="OnboardingBaseTextAppearance">
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/sarabun</item>
    </style>

    <style name="OnboardingBaseTextAppearance.Title" parent="OnboardingBaseTextAppearance">
        <item name="android:textColor">@color/black_600</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnboardingBaseTextAppearance.Subtitle" parent="OnboardingBaseTextAppearance">
        <item name="android:textColor">@color/black_400</item>
    </style>

    <style name="OnboardingTextAppearance.Title" parent="OnboardingBaseTextAppearance.Title">
        <item name="android:textSize">@dimen/thirty_six_scale_pixels</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="OnboardingTextAppearance.Subtitle" parent="OnboardingBaseTextAppearance.Subtitle">
        <item name="android:textSize">@dimen/sixteen_scale_pixels</item>
        <item name="android:textAlignment">center</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="OnboardingTextAppearance.Hint" parent="OnboardingBaseTextAppearance">
        <item name="android:fontFamily">@font/sarala</item>
        <item name="android:textColor">@color/gray_200</item>
        <item name="android:textSize">@dimen/fourteen_scale_pixels</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>